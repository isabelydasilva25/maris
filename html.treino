<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Treino</title>
    <link rel="stylesheet" href="treino.css">
    <script src="treino.js"></script>
</head>
<body onload="buscartreino()">
<header>
    <img class="logo" src="imagens/logoo.png">
     <img class="logo2" src="imagens/ccmts.jfif">
     <img class="logo3" src="imagens/parana.png">
    
</header>
<nav></nav>
    <main>
        <div id="main-container">


    <!-- Busca cliente -->
    <form id="cliente-form">
        <div class="full-box">
            <label for="cpf-cliente">CPF do Cliente:</label>
            <input type="text" id="cpf-cliente" name="cpf-cliente" placeholder="Digite o CPF do cliente" required>
            <button type="button" class="alinhaBtns" onclick="buscarCliente()">Buscar Cliente</button>
        </div>
        <div id="cliente-info"></div>
    </form>

    <!-- Adicionar treino -->
    <form id="treino-form">
        <div class="half-box">
            <label for="treino-nome">:</label>
            <select id="treino-nome" name="treino-nome" required>
                <option value="">Selecione o Treino</option>
                
            </select>
        </div>

        <form id="treino-form">
            <div class="half-box">
                <label for="treino-nome1">Produto:</label>
                <select id="treino-nome1" name="treino-nome1" required>
                    <option value="">Selecione o Treino</option>

                </select>
            </div>

            <form id="treino-form">
                <div class="half-box">
                    <label for="treino-nome2">Produto:</label>
                    <select id="treino-nome2" name="treino-nome2" required>
                        <option value="">Selecione o Treino</option>

                    </select>
                </div>

        <div class="half-box">
            <label for="treino-series">Series:</label>
            <input type="number" id="treino-series" name="treino-series" placeholder="Quantidade" required>
        </div>
    </form>

    <div id="treino-final" data-treino="0">semtreino</div>

   <!-- finalizar treino -->
   <button type="button" class="alinhaBtns" onclick="finalizartreino()">finalizar treino</button>


<footer>
     <p>2025 - Todos os direitos reservados</p>
</footer>
</body>
            </html>
